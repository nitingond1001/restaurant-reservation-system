<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | Restaurant Reservation System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1500&q=80') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-container {
      background: rgba(255,255,255,0.97);
      padding: 2.5rem 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 24px rgba(0,0,0,0.12);
      width: 100%;
      max-width: 420px;
      margin: 2rem 0;
    }
    .login-title {
      font-weight: 700;
      margin-bottom: 1.2rem;
      color: #8B4513;
      text-align: center;
      letter-spacing: 1px;
    }
    .logo-img {
      display: block;
      margin: 0 auto 1rem auto;
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      border: 3px solid #8B4513;
      background: #fff;
    }
    .form-label {
      color: #8B4513;
      font-weight: 500;
    }
    .btn-login {
      background: #8B4513;
      color: #fff;
      font-weight: 600;
      border: none;
      transition: background 0.2s;
    }
    .btn-login:hover {
      background: #a0522d;
      color: #fff;
    }
    .mt-3 a {
      color: #8B4513;
      text-decoration: underline;
    }
    .input-group-eye {
      position: absolute;
      right: 1rem;
      top: 0;
      bottom: 0;
      display: flex;
      align-items: center;
      height: 100%;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <img src="https://cdn-icons-png.flaticon.com/512/3075/3075977.png" alt="Restaurant Logo" class="logo-img">
    <h2 class="login-title">Welcome Back</h2>
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label">Username or Email</label>
        <input type="text" class="form-control" id="username" name="username" required autocomplete="username">
      </div>
      <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required autocomplete="current-password">
        <span class="input-group-eye" onclick="togglePassword('password', this)">
          <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#8B4513" class="bi bi-eye" viewBox="0 0 16 16">
            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288C13.879 11.332 12.12 12.5 10 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.133 13.133 0 0 1 1.172 8z"/>
            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zm0 1a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3z"/>
          </svg>
        </span>
      </div>
      <button type="submit" class="btn btn-login w-100">Login</button>
    </form>
    <div class="mt-3 text-center">
      <small>Don't have an account? <a href="/register">Register</a></small>
    </div>
  </div>
  <script>
    function togglePassword(inputId, iconSpan) {
      const input = document.getElementById(inputId);
      if (input.type === "password") {
        input.type = "text";
        iconSpan.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#8B4513" class="bi bi-eye-slash" viewBox="0 0 16 16"><path d="M13.359 11.238C14.06 10.393 14.682 9.393 15.03 8.8a.5.5 0 0 0 0-.6C14.682 6.607 12.06 3.5 8 3.5c-.94 0-1.82.164-2.617.447l1.12 1.12A5.978 5.978 0 0 1 8 4.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.346.607-.97 1.607-1.67 2.45l.396.5z"/><path d="M11.354 12.354a.5.5 0 0 1-.708 0l-8-8a.5.5 0 1 1 .708-.708l8 8a.5.5 0 0 1 0 .708z"/></svg>`;
      } else {
        input.type = "password";
        iconSpan.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#8B4513" class="bi bi-eye" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288C13.879 11.332 12.12 12.5 10 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.133 13.133 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zm0 1a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3z"/></svg>`;
      }
    }
  </script>
</body>
</html>